{
  "build": {
    "beforeBuildCommand": "cd web_frontend && trunk build",
    "beforeDevCommand": "cd web_frontend && trunk serve",
    "devPath": "http://127.0.0.1:8080",
    "distDir": "../web_frontend/dist"
  },
  "package": {
    "productName": "Privaxy",
    "version": "0.5.2"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "systemTray": {
      "iconPath": "icons/tray.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "net.privaxy",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "minHeight": 600,
        "resizable": true,
        "title": "Privaxy",
        "width": 800,
        "minWidth": 800
      }
    ]
  }
}
